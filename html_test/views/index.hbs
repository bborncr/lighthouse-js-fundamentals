<h2 class="page-header">Registrar una nueva notificación</h2>
<form method="post" action="/users/register">
  <div class="form-group">
    <label>Número de orden</label>
    <input type="text" class="form-control" name="order_number" placeholder="20000" autofocus="true">
  </div>
  <div class="form-group">
    <label>Número de guia EMS</label>
    <input type="text" class="form-control" name="tracking_number" placeholder="CB000000000CR">
  </div>
  <div class="form-group">
    <label>Correo electrónico</label>
    <input type="text" class="form-control" name="client_email" placeholder="cliente@ejemplo.com">
  </div>
  <button type="submit" class="btn btn-primary">Registrar</button>
</form>
<br>
<h2 class="page-header">Notificaciones Registradas</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Número de orden</th>
      <th>Número de guia</th>
      <th>Correo electrónico</th>
      <th>Editar</th>
    </tr>
  </thead>
  <tbody>
    {{#each emails}}
    <tr>
      <td>{{order_number}}</td>
      <td>{{tracking_number}}</td>
      <td>{{client_email}}</td>
      <td><a href="/users/delete/{{_id}}">
        <span class="glyphicon glyphicon-remove text-danger">  </span>
        </a>
        <a href="/users/modify/{{_id}}">
          <span class="glyphicon glyphicon-pencil text-info"></span>
        </a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
<form method="post" action="/users/send-batch">
 <button type="submit" class="btn btn-danger">Enviar correos</button>
</form>


